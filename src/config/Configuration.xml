<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!--
  主要是配置实体类映射文件中的别名，其他内容都交给spring管理
 -->
<configuration>
    <settings>
        <!-- 启用自动驼峰映射配置-->
        <setting name="mapUnderscoreToCamelCase" value="false"/>
        <!-- 空值默认null来处理不需要全部指定jdbcType=VARCHAR -->
        <setting name="jdbcTypeForNull" value="VARCHAR"/>
    </settings>
    <typeAliases>
        <typeAlias alias="User" type="com.gtafe.model.User"/>
        <!-- 货币表 -->
        <typeAlias alias="Pifccy" type="com.gtafe.model.Pifccy"/>
        <!-- 科目表-->
        <typeAlias alias="Pifitm" type="com.gtafe.model.Pifitm"/>
        <!-- 银行卡实体类 -->
        <typeAlias alias="BankCar" type="com.gtafe.model.BankCar"/>
        <!-- 客户关系表 -->
        <typeAlias alias="CusRelations" type="com.gtafe.model.CusRelations"/>
        <!--  有价单证实体类 -->
        <typeAlias alias="PriceCertificate" type="com.gtafe.model.PriceCertificate"/>

        <typeAlias alias="ExchangeRate" type="com.gtafe.model.ExchangeRate"/>

        <!--  费率表   -->
        <typeAlias alias="FeeRate" type="com.gtafe.model.Piffrt"/>
        <!--  结售汇牌价表   -->
        <typeAlias alias="ExchangeReceipts" type="com.gtafe.model.ExchangeReceipts"/>
        <!--  内部账户控制表   -->
        <typeAlias alias="AcctControl" type="com.gtafe.model.AcctControl"/>
        <!--  公共代码表   -->
        <typeAlias alias="PublicCode" type="com.gtafe.model.PublicCode"/>
        <!--  内部账户开户表   -->
        <typeAlias alias="AcctOpen" type="com.gtafe.model.AcctOpen"/>
        <!--  业务码表   -->
        <typeAlias alias="Pifbus" type="com.gtafe.model.Pifbus"/>
        <!--  利率表   -->
        <typeAlias alias="Pifirt" type="com.gtafe.model.Pifirt"/>

        <!-- 应用码表 -->
        <typeAlias alias="Pifapp" type="com.gtafe.model.Pifapp"/>
        <!-- 交易码表 -->
        <typeAlias alias="Piftrx" type="com.gtafe.model.Piftrx"/>
        <!-- 国家码表 -->
        <typeAlias alias="CountryCode" type="com.gtafe.model.CountryCode"/>
    </typeAliases>

    <!--自定义去除数据库返回字段两边空格-->
    <plugins>
        <plugin interceptor="com.gtafe.util.TrimPlugin">
            <property name="isTrim" value="true"/>
        </plugin>
    </plugins>
</configuration>